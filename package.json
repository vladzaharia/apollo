{
  "name": "apollo-sync",
  "version": "2.0.0",
  "description": "Apollo/Sunshine app configuration sync tool - modernized for 2025",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "sync": "yarn build && node dist/index.js sync",
    "sync:dry": "yarn build && node dist/index.js sync --dry-run",
    "sync:verbose": "yarn build && node dist/index.js sync --dry-run --verbose",
    "generate": "yarn build && node dist/index.js generate",
    "generate:dry": "yarn build && node dist/index.js generate --dry-run",
    "generate:verbose": "yarn build && node dist/index.js generate --dry-run --verbose",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@oclif/core": "^4.0.0",
    "axios": "^1.7.0",
    "chalk": "^5.3.0",
    "igdb-api-node": "^6.0.5",
    "pino": "^9.0.0",
    "steamgriddb": "^2.2.0",
    "xml2js": "^0.6.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.9.2"
}
